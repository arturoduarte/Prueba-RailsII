<h1 class="text-center bold green-text">Listado de Tareas</h1>


<div class="row">
	<% @todo.each do |todos| %>
	<div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
		<div class="card border-success white bottom-space sombra text-center mb-4 ">
			
			<header>			
				<h3 class="grey-text bold text-center card-header"><%= image_tag  todos.picture %> </h3>
			</header>
			
			<div class="p-3 text-center">  <!-- padding de bootstrap -->
				<section>
					<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 inline-block no-padding text-center">
						<strong><%= todos.name %> </strong>
					</div>
					
					<div class="col-xl-10 col-lg-6 col-md-12 col-sm-12 col-10 inline-block text-left">
						<br>
						<h3 class="green-text bold normal"> 
							<span class="grey-text">
								<small><%= time_ago_in_words(todos.created_at) %> ago</small>
							</span>
						</h3>	
					</div>

						<div class="text-left">
							<%= link_to 'Listo <i class="oi oi-cart"></i>'.html_safe, '#', class:'btn btn-primary', method: :post %>
						</div>
						
				</section>
			</div>
		</div>
	</div>
	
	<% end %>
	
</div>


